<style>
    .card{
        border: 0.5px solid rgb(194, 189, 189);
        height: 300px;
        border-radius: 5px;
        margin: 10px;
        width: 300px;
        margin-top: 30px;

        font-family: sans-serif;    
    }
    .card:hover{
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;      
    }
    .data{
        padding: 2px;

    }
    img {
        border-radius: 50px;
        margin-top: 10px;
        position: relative;
        top: 0%;
        left: 31%;
        z-index: 1;

    }
    .upperPart{
        background: url(https://gstatic.com/classroom/themes/img_backtoschool.jpg) no-repeat center center/cover;
        border-radius: 5px;
        text-align: center;
        padding: 15px;
        height: fit-content;
    }

    .lowerPart{
        padding: 30px;
        display: flex;
        overflow-y: scroll;
        margin-bottom: 20px ;
        display: flex;
        flex-direction: row;
    }
    .nameAndPhoto{
        display: flex;
        padding: 20px;
    }
    .description{
        {{!-- overflow-y: scroll; --}}
        height: 100%;
        width:100%;
        border: 2px solid black;
    }
    ::-webkit-scrollbar {
    width: 0;  /* Remove scrollbar space */
    background: transparent;  /* Optional: just make scrollbar invisible */
  }
.delete_class_code{
    display: flex;
    border: 2px solid red;
    margin-left: 10%;
}
.delete{
    margin-left: 15%;
    border: 2px solid red;
}
.delete:hover{
    cursor: pointer;
}
.box {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    grid-gap: .5rem;
    margin: 5%;
}

#titleClass{
  color: white;
  font-family: "Roboto";
  text-decoration: none;
}


</style>


<div class="box">
{{#each allClasses}}

    <div class="card" id="card-{{@key}}">
        <div class="upperPart">
            <div class="delete_class_code">
            <div class="data" id="titleClass"><h2>{{this.className}}</h2></div>
            <div class="data" id="class-{{@key}}">{{this.classCode}}</div><div class="delete" onclick="editCard({{@key}})">ðŸ› </div>
            </div>
            <div class="data">{{this.classTeacher}}</div>
            <div>
                <hr>
            </div>
            
        </div>
        
        <div class="lowerPart">
            <div class="data description"><p>{{this.classDescription}}</p></div>
            {{!-- <div class="data">{{this.classTeacherId}}</div> --}}
            <iframe class="teacherImage" src="{{this.classTeacherImage}}" width="50%" frameborder="0"></iframe> 
        </div>

        <br><br>
    </div>
{{/each}}
</div>

<script>
    function editCard(key){
        console.log(key);
        let id = `class-${key}`;
        console.log(id);
        location.assign('/studentDashboard/'+document.getElementById(id).innerHTML);
    }
</script>