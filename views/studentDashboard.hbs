<style>
    
    body{
        background-color: rgb(231 237 239);
    }
    .tableTeacherDashboard{
        display: flex;
        justify-content: center;
    }
    th, td{
        border: 1px solid black;
    }
    table{
        margin-top: 5%;
        width: 60%;
        height: auto;
    }
    tr>th{
        font-size: large;
        background-color: #d2f6ff;
        padding: 20px;
    }
    tr>td{
        background-color: #f0fbff;
        padding: 20px;
    }
    .card{
        border: 0.5px solid rgb(194, 189, 189);
        height: 380px;
        border-radius: 5px;
        margin: 10px;
        width: 377px;
        margin-top: 30px;
        font-family: sans-serif;    
    }
    .card:hover{
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;    
        cursor: pointer;  
    }
    .data{
        padding: 2px;

    }
    img {
        margin-top: 0px;
    }
    .upperPart{
        border-radius: 5px;
        text-align: center;
        padding: 15px;
        height: 80px;
        background-color: #d2f6ff;
    }

    .lowerPart{
        padding: 10px;
        overflow-y: scroll;
        margin-bottom: 20px ;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        height: 65.5%;
        background-color: white;
    }

    .description{
        height: 100%;
        width:100%;
        color: rgb(122, 117, 117);
    }
    ::-webkit-scrollbar {
    width: 0;  /* Remove scrollbar space */
    background: transparent;  /* Optional: just make scrollbar invisible */
  }

.box {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    grid-gap: .5rem;
    margin: 5%;
}
.teacherImage{
    width: 27.4%;
    height: 96%;
}
.teacherImageContainer{
    width: 98%;
    height: 100;
}
#titleClass{
  color: black;
  font-family: "Roboto";
  text-decoration: none;
}


</style>


<div class="box">
{{#each allClasses}}

    <div class="card" id="card-{{@key}}" onclick="editCard({{@key}})">
        <div class="upperPart">
            <div class="data" id="titleClass"><h2>{{this.className}}</h2></div>
            <div class="data" id="class-{{@key}}">{{this.classCode}}</div>
           
            <div class="data">{{this.classTeacher}}</div>
            <div>
                <hr>
            </div>
            
        </div>
        
        <div class="lowerPart">
            <div class="teacherImageContainer">
                <iframe class="teacherImage" src="{{this.classTeacherImage}}" frameborder="0"></iframe> 
            </div>
            <div class="data description"><p>{{this.classDescription}}</p></div>
            {{!-- <div class="data">{{this.classTeacherId}}</div> --}}
        </div>

        <br><br>
    </div>
{{/each}}
</div>
<hr>
    <div class="tableTeacherDashboard">
        <table border="2" class="timeTable">
        <thead>
            <tr>
                <th>Class Name</th>
                <th>Class Teacher Name</th>
                <th>Description</th>
                <th>Passcode </th>
            </tr>
        </thead>
        {{#each allClasses}}

        <tbody>
            <tr>
                <td>{{this.className}}</td>
                <td>{{this.classTeacher}}</td>
                <td>{{this.classDescription}}</td>
                <td>
                    {{#if this.classCode}}
                        {{this.classCode}}
                    {{/if}}
                        No Password
                </td>
            </tr>
        </tbody>
        {{/each}}
        </table>
    </div>
<script>
    function editCard(key){
        console.log(key);
        let id = `class-${key}`;
        console.log(id);
        location.assign('/studentDashboard/'+document.getElementById(id).innerHTML);
    }
</script>